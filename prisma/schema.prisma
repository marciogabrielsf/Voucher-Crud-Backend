// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  email     String    @unique
  name      String
  password  String
  updatedAt DateTime? @updatedAt
  cpf       String    @unique
  createdAt DateTime? @default(now())

  vouchers   Voucher[]
  vouchersV2 VoucherV2[]
  expenses   Expense[]
}

model Voucher {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  user          User      @relation(fields: [userId], references: [id])
  userId        String    @db.ObjectId
  value         Float
  voucherNumber Int
  orderNumber   Int
  voucherDate   DateTime
  company       String
  updatedAt     DateTime? @updatedAt
  createdAt     DateTime? @default(now())
}

model VoucherV2 {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  user            User      @relation(fields: [userId], references: [id])
  userId          String    @db.ObjectId
  taxNumber       String
  requestCode     String
  requestCategory String
  date            DateTime
  value           Float
  start           String
  destination     String
  updatedAt       DateTime? @updatedAt
  createdAt       DateTime? @default(now())
}

enum ExpenseCategory {
  FOOD
  TRANSPORT
  HOUSING
  ENTERTAINMENT
  HEALTHCARE
  EDUCATION
  UTILITIES
  SHOPPING
  OTHER
}

model Expense {
  id            String          @id @default(auto()) @map("_id") @db.ObjectId
  user          User            @relation(fields: [userId], references: [id])
  userId        String          @db.ObjectId
  value         Float
  category      ExpenseCategory
  date          DateTime
  description   String?
  paymentMethod String?
  updatedAt     DateTime?       @updatedAt
  createdAt     DateTime?       @default(now())
}
